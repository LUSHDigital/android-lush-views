<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="16dp">

		<com.lush.view.LushEditText
			android:id="@+id/address_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			app:editTextHint="Address Line 1"
			app:title="Address Line 1"/>

		<com.lush.view.LushEditText
			android:id="@+id/locality_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			app:editTextHint="City"
			app:title="City"/>

		<com.lush.view.LushEditText
			android:id="@+id/postcode_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			app:editTextHint="Postcode"
			app:title="Postcode"/>

		<Button
			android:id="@+id/submit"
			style="@style/LushButton.Black"
			android:layout_width="match_parent"
			android:layout_margin="16dp"
			android:text="Submit"/>

	</LinearLayout>

</ScrollView>