<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:layout_margin="8dp"
				  android:orientation="vertical">

		<TextView
			style="@style/Text.Sample"
			android:text="Rating View"/>

		<com.lush.view.RatingView
			android:id="@+id/rating_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="8dp"
			custom:emptyStarDrawable="@drawable/ic_custom_star_empty"
			custom:fullStarDrawable="@drawable/ic_custom_star_full"/>

		<TextView
			style="@style/Text.Sample"
			android:text="Editable Rating View"/>

		<com.lush.view.EditableRatingView
			android:id="@+id/editable_rating_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="8dp"
			custom:emptyStarDrawable="@drawable/ic_custom_star_empty"
			custom:fullStarDrawable="@drawable/ic_custom_star_full"/>

	</LinearLayout>

</ScrollView>