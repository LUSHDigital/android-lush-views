<resources>

	<style name="LushTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@android:color/black</item>
		<item name="colorPrimaryDark">@android:color/black</item>
		<item name="colorAccent">@android:color/black</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="LushTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@android:color/black</item>
		<item name="colorPrimaryDark">@android:color/black</item>
		<item name="colorAccent">@android:color/black</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="LushToolbar">
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
		<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="android:background">@android:color/black</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="titleTextColor">@android:color/white</item>
		<item name="subtitleTextColor">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
		<item name="android:textColorSecondary">@android:color/white</item>
	</style>

	<style name="LushToolbarWhite">
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="android:background">@android:color/white</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="titleTextColor">@android:color/black</item>
		<item name="subtitleTextColor">@android:color/black</item>
	</style>

	<style name="LushButton">
		<item name="android:layout_width">192dp</item>
		<item name="android:layout_height">56dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:padding">16dp</item>
		<item name="android:gravity">center</item>
		<item name="elevation">0dp</item>
	</style>

	<style name="LushButton.Black">
		<item name="android:textColor">@drawable/state_button_text_white</item>
		<item name="android:background">@drawable/state_button_black_primary</item>
	</style>

	<style name="LushButton.White">
		<item name="android:textColor">@drawable/state_button_text_black</item>
		<item name="android:background">@drawable/state_button_white_primary</item>
	</style>

	<style name="LushButton.BlackSecondary">
		<item name="android:textColor">@drawable/state_button_text_black</item>
		<item name="android:background">@drawable/state_button_black_secondary</item>
	</style>

	<style name="LushButton.BlackSecondaryTransparent">
		<item name="android:textColor">@drawable/state_button_text_black</item>
		<item name="android:background">@drawable/state_button_black_secondary_transparent</item>
	</style>

	<style name="LushButton.Black.Round">
		<item name="android:background">@drawable/state_button_black_round_primary</item>
	</style>

	<style name="LushButton.BlackSecondary.Round">
		<item name="android:background">@drawable/state_button_black_round_secondary</item>
	</style>

	<style name="LushEditText">
		<item name="android:background">@drawable/bg_edit_text_border</item>
		<item name="android:padding">12dp</item>
		<item name="android:textAppearance">@style/Text.Black</item>
	</style>

	<style name="WhiteProgressBar" parent="Theme.AppCompat">
		<item name="colorAccent">@android:color/white</item>
	</style>

</resources>
